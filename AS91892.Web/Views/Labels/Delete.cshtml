@model RecordLabel

@{
    ViewData["Title"] = "Delete";
}

<h1>@ViewData["Title"]</h1>

<h3>Are you sure you want to delete this resource from the database?</h3>
<h3>This action cannot be reverted.</h3>

<div>
    <h4>Label</h4>
    <hr />
    <form asp-controller="Labels" asp-action="Delete">
        <input type="hidden" asp-for="@Model!.Id"/>
        <input type="submit" value="Delete" class="btn btn-danger" formmethod="post" /> |
        <a asp-controller="Labels" asp-action="Index">Back to main page</a>
    </form>
</div>